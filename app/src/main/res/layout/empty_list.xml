<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    card_view:cardCornerRadius="@dimen/corner_rounded_radius"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_big"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_embarassed"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            card_view:srcCompat="@drawable/ic_embarrassed" />

        <TextView
            android:id="@+id/textView_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="27dp"
            android:layout_toEndOf="@+id/iv_embarassed"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/no_data"
            tools:text="No Data available so far. Sorry :(" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
